{
  "hosting": {
    "public": "build",
    "site": "hbd-card",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/user",
        "destination": "/404.html",
        "type": 404
      },
      {
        "regex": "/user(/.*)",
        "destination": "/index.html"
      },
      {
        "source": "!/@(webp|jpg|jpeg|gif|png|svg|js|css|map|ico)/**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(webp|jpg|jpeg|gif|png|svg)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=604800"
        }]
      },
      {
        "source": "**/*.@(css|js)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=86400"
        }]
      },
      {
        "source": "404.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=300"
        }]
      },
      {
        "source": "**/*.@(ico)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "hosting": {
      "port": 8003,
	    "host": "127.0.0.1"
    },
    "storage": {
      "port": 8004,
	    "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 8006,
	    "host": "127.0.0.1"
    },
    "hub":{
      "host":"127.0.0.1",
      "port":8007
    },
    "logging":{
      "host":"127.0.0.1",
      "port":8008
    }
  }
}
